
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>

<partial name="RoleFormPartialView" model="new RoleFormViewModel()"/>

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>

                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is No Records yet!</h2>
    </div>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

